@model IEnumerable<verklega.Models.Subtitle>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="Site.css" />
<h2>Leitarniðurstöður</h2>

<p>
    @Html.ActionLink("Leita", "Index", "Subtitle")

    @using (Html.BeginForm())
    {
    <p>
        @Html.TextBox("searchString") <br />
        <input type="submit" value="Leita" />
    </p>
    }
</p>


<table class="table">
    <tr>
        <th>
            User
        </th>
        <th>
            Subtitles
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language.TextLanguage)
            </td>
            <td><img src="http://i.imgur.com/iQDIVhA.png" alt="uppþumla" width="20" height="15" /></td>
        </tr>
    }
</table>



