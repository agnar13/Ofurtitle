@model IEnumerable<verklega.Models.Subtitle>

@{
    ViewBag.Title = "Index";
}

<table class="table">
    <tr>
        <th>
            User
        </th>
        <th>
            Subtitles
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                Mucho Likes! Grande!
            </td>
        </tr>
    }
</table>
